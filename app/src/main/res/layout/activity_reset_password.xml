<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <ImageView
        android:id="@+id/iconImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="reset_password"
        android:layout_marginLeft="150sp"
        android:src="@drawable/reset_password_image"
        app:layout_constraintBottom_toTopOf="@+id/resetPasswordTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/resetPasswordTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="61dp"
        android:text="Reset Your Password"
        android:textSize="24sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/newPasswordEditText"
        app:layout_constraintStart_toStartOf="@+id/iconImageView"
        app:layout_constraintTop_toBottomOf="@+id/iconImageView" />

    <EditText
        android:id="@+id/newPasswordEditText"
        android:layout_width="352dp"
        android:layout_height="42dp"
        android:layout_marginBottom="11dp"
        android:background="@drawable/opacitywihite"
        android:backgroundTint="@color/bluewithopacity"
        android:hint="create a new password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/confirmPasswordEditText"
        app:layout_constraintEnd_toEndOf="@+id/confirmPasswordEditText"
         app:layout_constraintStart_toStartOf="@+id/confirmPasswordEditText"
        app:layout_constraintTop_toBottomOf="@+id/resetPasswordTitle" />

    <EditText
        android:id="@+id/confirmPasswordEditText"
        android:layout_width="352dp"
        android:layout_height="42dp"
        android:layout_marginBottom="11dp"
        android:background="@drawable/opacitywihite"
        android:backgroundTint="@color/bluewithopacity"
        android:hint="confirm_your_new_password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/rememberMeSwitch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newPasswordEditText" />

    <Switch
        android:id="@+id/rememberMeSwitch"
        android:layout_width="352dp"
        android:layout_height="42dp"
        android:layout_marginBottom="11dp"
        android:text="Remember_me"
        app:layout_constraintBottom_toTopOf="@+id/resetPasswordButton"
        app:layout_constraintStart_toStartOf="@+id/confirmPasswordEditText"
        app:layout_constraintTop_toBottomOf="@+id/confirmPasswordEditText" />

    <Button
        android:id="@+id/resetPasswordButton"
        android:layout_width="346dp"
        android:layout_height="57dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="103dp"
        android:backgroundTint="#176FF2"
        android:text="reset_password"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rememberMeSwitch" />

</androidx.constraintlayout.widget.ConstraintLayout>

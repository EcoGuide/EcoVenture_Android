<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <ImageView
        android:id="@+id/iconImageView"
        android:layout_width="494dp"
        android:layout_height="668dp"
        android:contentDescription="reset_password"
        android:src="@drawable/resetpassword_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/newPasswordEditText"
        android:layout_width="255dp"
        android:layout_height="47dp"
        android:layout_marginTop="402dp"
        android:layout_marginBottom="13dp"
        android:background="@drawable/opacitywihite"
        android:backgroundTint="@color/bluewithopacity"
        android:hint="create a new password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/confirmPasswordEditText"
        app:layout_constraintEnd_toEndOf="@+id/confirmPasswordEditText"
        app:layout_constraintStart_toStartOf="@+id/iconImageView"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/confirmPasswordEditText"
        android:layout_width="257dp"
        android:layout_height="45dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/opacitywihite"
        android:backgroundTint="@color/bluewithopacity"
        android:hint="confirm_your_new_password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/rememberMeSwitch"
        app:layout_constraintEnd_toEndOf="@+id/rememberMeSwitch"
        app:layout_constraintHorizontal_bias="0.217"
        app:layout_constraintStart_toStartOf="@+id/iconImageView"
        app:layout_constraintTop_toBottomOf="@+id/newPasswordEditText" />

    <Switch
        android:id="@+id/rememberMeSwitch"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="24dp"
        android:text="Remember_me"
        app:layout_constraintBottom_toTopOf="@+id/resetPasswordButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/iconImageView"
        app:layout_constraintTop_toBottomOf="@+id/confirmPasswordEditText" />

    <Button
        android:id="@+id/resetPasswordButton"
        android:layout_width="309dp"
        android:layout_height="53dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="85dp"
        android:backgroundTint="#176FF2"
        android:text="reset_password"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rememberMeSwitch" />

</androidx.constraintlayout.widget.ConstraintLayout>
